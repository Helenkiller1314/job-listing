<div class="container-fluid jobs-show-page">
  <div class="col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2">
    <div class="dropdown clearfix pull-right">
      <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown"
        aria-haspopup="true" aria-expanded="true">排序
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenuDevider">
        <li>
          <%= link_to("按照薪资下限", jobs_path(:order => "by_lower_bound")) %>
        </li>
        <li>
          <%= link_to("按照薪资上限", jobs_path(:order => "by_upper_bound")) %>
        </li>
        <li>
          <%= link_to("按照发表时间", jobs_path) %>
        </li>
      </ul>
    </div><br>
    <% if current_user.admin? %>
      <%= link_to(content_tag(:i, " Back to Admin", class: "fa fa-reply-all"), admin_jobs_path) %>
    <% end %>




    <br><br><br>


    <% @jobs.each do |job| %>
    <div class="row jobs-show">
      <div class="col-md-12 col-lg-10 col-lg-offset-1">
        <div class="pull-right">
          <%= link_to("马上应聘", new_job_resume_path(job), class: "btn btn-info btn-sm", method: :get) %>
        </div>
        <p><%= link_to(job.title, job_path(job)) %></p>


        <div class="row">
          <div class="col-md-6">
            <p>薪资: <%= job.wage_lower_bound %> ~ <%= job.wage_upper_bound %> </p>
          </div>
          <div class="col-md-6">
            <p><i class="fa fa-address-card-o" aria-hidden="true"></i>  <%= job.category %></p>
          </div>
        </div>

        <div class="row">
          <div class="col-md-3 col-sm-6">
            <span><i class="fa fa-user-circle-o" aria-hidden="true"></i>  <%= job.company %></span>
          </div>
          <div class="col-md-3 col-sm-6">
            <span><i class="fa fa-location-arrow" aria-hidden="true"></i>  <%= job.city %></span>
          </div>
          <div class="col-md-3 col-sm-6">
            <span><i class="fa fa-clock-o" aria-hidden="true"></i>  <%= time_ago_in_words(job.created_at) %> ago</span>
          </div>
          <div class="col-md-3 col-sm-6">
            <span><i class="fa fa-envelope" aria-hidden="true"></i>  <%= job.contact_email %></span>
          </div>
        </div>
      </div>
    </div>
    <% end %>

    <div class="text-center">
      <%= will_paginate @jobs, renderer: BootstrapPagination::Rails %>
    </div>
  </div>
</div>
