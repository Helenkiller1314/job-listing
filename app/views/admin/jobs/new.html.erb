<div class="col-md-8 col-md-offset-2">
    <h1 class="text-center"> 发布新岗位 </h1>
    <hr>

<%= simple_form_for [:admin,@job] do |f| %>

<%= f.input :title, :label => "岗位"  %>
<%= f.input :description, :label => "岗位描述"  %>
<%= f.input :category, :collection => ["产品经理","游戏开发", "新媒体运营", "硬件开发", "web开发", "Android开发", "云计算", "测试工程师"], :selected => "产品经理", :label => "类别" %>
<%= f.input :wage_lower_bound, :label => "薪资下限"%>
<%= f.input :wage_upper_bound, :label => "薪资上限"%>
<%= f.input :company, :label => "公司" %>
<%= f.input :contact_email, :label => "联系邮件"%>
<%= f.input :city, :label => "工作城市" %>

<%= f.input :is_hidden, :label => "隐藏岗位"%>

<%= f.submit "提交", class: "btn btn-danger"%>
<% end %>
</div>
